<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="@dimen/default_card_margin"
    app:cardCornerRadius="@dimen/card_corner_radius"
    tools:showIn="@layout/content_main">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/logo_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/card_header_logo_margin"
            android:layout_marginTop="@dimen/card_header_logo_margin"
            android:contentDescription="@string/CD_card_header_logo"
            android:src="@drawable/ic_logo" />

        <TextView
            style="@style/TextAppearance.AppCompat.Large.Inverse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/logo_view"
            android:background="@drawable/card_view_color"
            android:gravity="center"
            android:padding="@dimen/card_strip_text_padding"
            android:text="@string/card_header_strip" />


    </RelativeLayout>
</android.support.v7.widget.CardView>
